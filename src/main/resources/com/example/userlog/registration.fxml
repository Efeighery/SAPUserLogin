            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="46.0" layoutY="108.0" text="FirstName">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="firstnameTF" layoutX="118.0" layoutY="105.0" prefHeight="25.0" prefWidth="306.0" promptText="Enter first name" />
      <Label layoutX="46.0" layoutY="151.0" text="LastName">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="lastnameTF" layoutX="118.0" layoutY="148.0" prefHeight="25.0" prefWidth="306.0" promptText="Enter last name" />
